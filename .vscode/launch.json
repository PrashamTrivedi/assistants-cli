{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Package",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/main.go",
            "console": "integratedTerminal",
            "args": [
                "${input:commandToRun}"
            ]
        },
        {
            "name": "Set config",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/main.go",
            "console": "integratedTerminal",
            "args": [
                "config",
                "-a",
                "test.json",
                "-k",
                "test"
            ]
        },
        {
            "name": "Start Chat",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/main.go",
            "console": "integratedTerminal",
            "args": [
                "chat",
                "-a",
                "01HAA1VR6RVYS7TA42SY9MKFCC",
                "-m",
                "Explain root.go code to me"
            ]
        },
        {
            "name": "Update Assistant",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/main.go",
            "console": "integratedTerminal",
            "args": [
                "update",
                "-a",
                "01HAA1VR6RVYS7TA42SY9MKFCC",
                "-p",
                "You are a helpful assistant running CLI, you know shell and linux very well. Your job is to find out commands and explain them if required",
                "-c",
                "-f",
                "-s"
            ]
        }
    ],
    "inputs": [
        {
            "id": "commandToRun",
            "type": "promptString",
            "description": "Enter the command to run",
        }
    ]
}