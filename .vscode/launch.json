    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Package",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/main.go",
            "console": "integratedTerminal",
            "args": [
                "${input:commandToRun}"
            ]
        },
        {
            "name": "Start Chat",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/main.go",
            "console": "integratedTerminal",
            "args": [
                "chat",
                "-m",
                "I want to overwrite a content of file and not append it, How would I do that",
                "--continue"
            ]
        },
    ],
    "inputs": [
        {
            "id": "commandToRun",
            "type": "promptString",
            "description": "Enter the command to run",
        }
    ]
}